.chat-side
  .side-header
    .side-header__box
      .side-header__box__user-name
        = current_user.name
      %ul.side-header__box__user-menu
        %li.user-menu__edit-user
          = fa_icon 'pencil-square-o', class: 'icon'
        %li.user-menu__new-group
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'

  .side-groups
    .group
      .group__group-name
        testgroup
      .group__last-message
        testmessage