.wrapper
  = render "static_pages/side_bar"
  .chat-main
    .main-header
      .left-header
        .left-header__current-group
          = @group.name
        .left-header__member-list
          Member:
          - @group.users.each do |user|
            = user.name
      .right-header
        .right-header__group-delete
          = link_to group_path(@group), method: :delete, data: { confirm: "本当にこのグループを削除しますか？" } do
            .right-header__group-delete__letter
              Delete
        .right-header__group-edit
          = link_to edit_group_path(@group) do
            .right-header__group-edit__letter
              Edit
        .right-header__group-exit
          = link_to "#" do
            .right-header__group-exit__letter
              Exit

    .messages
      = render partial: 'message', collection: @messages
    .form
      = render "form"
